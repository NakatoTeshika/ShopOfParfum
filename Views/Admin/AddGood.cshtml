@model AddGoodModel

<div class="container">
    <div class="row">
    <div class="col-md-3">
        @Html.Partial("AdminMenu")
    </div>
    
    <div class="col-md-9">
    <form asp-action="AddGood" asp-controller="Admin" method="post">
        <div asp-validation-summary=" All" class="text-danger"></div>
  <div class="form-group">
    <label asp-for="Name">Название</label>
    <input type="text" class="form-control" asp-for="Name" aria-describedby="asdas" placeholder="Введите название товара">
  </div>
  <div class="form-group">
    <label>Цена</label>
    <input class="form-control" placeholder="Введите цену" asp-for="Price" type="number">
</div>
  <div class="form-group">
    <label>Описание</label>
    <input class="form-control" placeholder="Введите описание продукта" asp-for="Description" type="text">
</div>

  <div class="form-group">
    <label>Бренд</label>
    <input class="form-control" placeholder="Введите описание продукта" asp-for="Street" type="text">
</div>
  <div class="form-group">
    <label>Страна</label>
    <input class="form-control" placeholder="Введите описание продукта" asp-for="StreetNumber" type="text">
</div>
 <div class="form-group">
    <label>Для кого</label>
    <input class="form-control" placeholder="Введите описание продукта" asp-for="Brand" type="text">
</div>
 <div class="form-group">
    <label>Путь к картине</label>
    <input class="form-control" value="ImgPath" asp-for="ImgPath" type="file">
</div>
  <button type="submit" class="btn btn-primary">Добавить</button>
</form>
</div>

