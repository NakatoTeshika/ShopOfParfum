@model LoginModel


<div class="container">

  <div class="col-md-6"></div>
  <div class="col-md-6">

    <form asp-action="Login" asp-controller="Account" method="post">

     
     <div asp-validation-summary="All" style="margin: 5px"></div>
      <div class="form-group">
        <label asp-for="Email">Email</label>
        <input type="text" class="form-control" asp-for="Email" aria-describedby="emailHelp" placeholder="Enter Email">
      </div>
      <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" placeholder="Inser password" asp-for="Password">
      </div>

      <button type="submit" class="btn btn-primary">Submit</button>

    </form>
  </div>
</div>